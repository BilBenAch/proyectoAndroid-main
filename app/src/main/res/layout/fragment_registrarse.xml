<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".RegistrarseFragment"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:paddingBottom="20dp"
    android:background="@color/fondo_general">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingBottom="40dp">

        <ImageView
            android:id="@+id/logo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="60dp"
            android:src="@drawable/logo"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>

        <TextView
            android:id="@+id/bienvenido"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/logo"
            android:layout_marginTop="8dp"
            android:gravity="bottom"
            android:text="@string/bienvenido_a_doble_b"
            android:textColor="@color/granate_principal"
            android:textSize="10.4413sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/logo">

        </TextView>

        <TextView
            android:id="@+id/iniciarSesionPagPrincipal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/bienvenido"
            android:layout_marginTop="24dp"
            android:gravity="bottom"
            android:text="@string/inicia_sesion_para_poder_continuar"
            android:textColor="@color/gris_texto"
            android:textSize="7.83sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/bienvenido">
        </TextView>

        <EditText
            android:id="@+id/crearCuentaNombreUsuario"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="24dp"
            android:layout_marginTop="35dp"
            android:layout_marginEnd="24dp"
            android:background="@drawable/edit_text_border"
            android:drawableStart="@drawable/usuariologo"
            android:drawablePadding="15dp"
            android:ems="10"
            android:textSize="12sp"
            android:hint="@string/introduce_el_nombre_de_usuario"
            android:inputType="textPersonName"
            android:fontFamily="@font/poppins"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/iniciarSesionPagPrincipal"/>


        <EditText
            android:id="@+id/crearCrearCuentaEmail"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="24dp"
            android:layout_marginTop="24dp"
            android:layout_marginEnd="24dp"
            android:background="@drawable/edit_text_border"
            android:drawableStart="@drawable/logoemail"
            android:drawablePadding="15dp"
            android:ems="10"
            android:fontFamily="@font/poppins_light"
            android:hint="@string/introduce_tu_email"
            android:inputType="textPersonName"
            android:padding="12dp"
            android:textSize="12sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/crearCuentaNombreUsuario"/>

        <EditText
            android:id="@+id/crearCuentaContrasenia1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="24dp"
            android:layout_marginTop="24dp"
            android:layout_marginEnd="24dp"
            android:background="@drawable/edit_text_border"
            android:drawableStart="@drawable/logopassword"
            android:drawablePadding="15dp"
            android:ems="10"
            android:fontFamily="@font/poppins_light"
            android:hint="Tu contraseÃ±a"
            android:inputType="textPassword"
            android:padding="12dp"
            android:textSize="12sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/crearCrearCuentaEmail"/>

        <EditText
            android:id="@+id/crearCuentaContrasenia2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="24dp"
            android:layout_marginTop="24dp"
            android:layout_marginEnd="24dp"
            android:background="@drawable/edit_text_border"
            android:drawableStart="@drawable/logopassword"
            android:drawablePadding="15dp"
            android:ems="10"
            android:fontFamily="@font/poppins_light"
            android:hint="@string/repite_tu_contrase_a"
            android:inputType="textPassword"
            android:padding="12dp"
            android:textSize="12sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/crearCuentaContrasenia1"/>

        <Button
            android:id="@+id/botonCrearCuenta"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="24dp"
            android:layout_marginTop="32dp"
            android:layout_marginEnd="24dp"
            android:background="@drawable/mybutton"
            android:fontFamily="@font/poppins_light"
            android:padding="21dp"
            android:text="@string/crear_cuenta"
            android:textColor="@color/white"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/crearCuentaContrasenia2" />

        <TextView
            android:id="@+id/YaEresMiembroRegsitrate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="32dp"
            android:fontFamily="@font/poppins"
            android:text="@string/ya_eres_miembro_inicia"
            android:textAlignment="center"
            android:textColor="@color/rojo_general_texto"
            android:textSize="11.44sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/botonCrearCuenta" />



    </androidx.constraintlayout.widget.ConstraintLayout>


</androidx.core.widget.NestedScrollView>