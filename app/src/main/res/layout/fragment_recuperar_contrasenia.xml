<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".RecuperarContraseniaFragment">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    <ImageView
        android:id="@+id/logo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="60dp"
        android:src="@drawable/logo"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"></ImageView>

    <TextView
        android:id="@+id/bienvenido"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/logo"
        android:layout_marginTop="8dp"
        android:gravity="bottom"
        android:text="Bienvenido a Doble B"
        android:textColor="@color/granate_principal"
        android:textSize="10.4413sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/logo">

    </TextView>

    <TextView
        android:id="@+id/iniciarSesionPagPrincipal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/bienvenido"
        android:layout_marginTop="24dp"
        android:gravity="bottom"
        android:text="Inicia sesion para poder continuar"
        android:textColor="@color/gris_texto"
        android:textSize="7.83sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/bienvenido">
    </TextView>

        <Button
            android:id="@+id/botonCambiarContrasenia"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="24dp"
            android:layout_marginTop="56dp"
            android:layout_marginEnd="24dp"
            android:background="@drawable/mybutton"
            android:fontFamily="@font/poppins_light"
            android:padding="21dp"
            android:text="Enviar Email"
            android:textColor="@color/white"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/introducirContrasenia" />

        <EditText
            android:id="@+id/introducirUsuario"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="24dp"
            android:layout_marginTop="48dp"
            android:layout_marginEnd="24dp"
            android:background="@drawable/edit_text_border"
            android:drawableStart="@drawable/usuariologo"
            android:drawablePadding="15dp"
            android:ems="10"
            android:fontFamily="@font/poppins"
            android:hint="Introduce el nombre de usuario"
            android:inputType="textPersonName"
            android:textSize="12sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/iniciarSesionPagPrincipal"></EditText>

        <EditText
            android:id="@+id/introducirEmail"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="24dp"
            android:layout_marginTop="32dp"
            android:layout_marginEnd="24dp"
            android:background="@drawable/edit_text_border"
            android:drawableStart="@drawable/logoemail"
            android:drawablePadding="15dp"
            android:ems="10"
            android:fontFamily="@font/poppins"
            android:hint="Introduce tu email"
            android:inputType="textPersonName"
            android:textSize="12sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/introducirUsuario"></EditText>

        <EditText
            android:id="@+id/introducirContrasenia"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="24dp"
            android:layout_marginTop="36dp"
            android:layout_marginEnd="24dp"
            android:background="@drawable/edit_text_border"
            android:drawableStart="@drawable/logopassword"
            android:drawablePadding="15dp"
            android:ems="10"
            android:fontFamily="@font/poppins"
            android:hint="Introduce tu nueva contraseÃ±a"
            android:inputType="textPersonName"
            android:textSize="12sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/introducirEmail"></EditText>

        <TextView
            android:id="@+id/YaEresMiembroIniciaSesion"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="64dp"
            android:fontFamily="@font/poppins"
            android:text="@string/ya_eres_miembro_inicia"
            android:textAlignment="center"
            android:textColor="@color/rojo_general_texto"
            android:textSize="11.44sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.502"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/botonCambiarContrasenia" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</FrameLayout>